{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "extends": [
        "plugin:vue/recommended"
    ],
    "rules": {
        "arca/curly": 0,
        "no-restricted-syntax": 0,
        "no-param-reassign": 0,
        "import/no-unresolved": 0,
        "import/order": 0,
        "import/no-extraneous-dependencies": 0,
        "no-console": 0,
        "no-nested-ternary": 0,
        "callback-return": 0,
        "linebreak-style": 0,
        "no-return-assign": 0,
        "no-unused-expressions": 0,
        "vue/attribute-hyphenation": 0,
        "vue/html-quotes": false,
        "vue/html-self-closing": "off",
        "vue/attributes-order": [
            3,
            {
                "order": [
                    "LIST_RENDERING",
                    "CONDITIONALS",
                    "RENDER_MODIFIERS",
                    "GLOBAL",
                    "UNIQUE",
                    "BINDING",
                    "OTHER_ATTR",
                    "EVENTS",
                    "CONTENT",
                    "DEFINITION"
                ]
            }
        ],
        "vue/require-default-prop": false,
        "vue/max-attributes-per-line": [
            3,
            {
                "singleline": 3,
                "multiline": {
                    "max": 3,
                    "allowFirstLine": true
                }
            }
        ],
        "vue/prop-name-casing": 0,
        "vue/html-indent": [
            "error",
            4,
            {
                "attribute": 1,
                "closeBracket": 0,
                "alignAttributesVertically": true,
                "ignores": []
            }
        ],
        "indent": [
            "error",
            4
        ],
        "max-len": [
            0,
            {
                "tabWidth": 4
            }
        ],
        "no-self-assign": [
            "error",
            {
                "props": false
            }
        ],
        "no-redeclare": "error",
        "no-lonely-if": "error",
        "no-multiple-empty-lines": [
            1,
            {
                "max": 1
            }
        ],
        "new-parens": "error",
        "block-spacing": "error",
        "no-const-assign": "error",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "semi": [
            "warn",
            "always",
            {
                "omitLastInOneLineBlock": true
            }
        ],
        "no-extra-semi": "error",
        "no-constant-condition": "error",
        "no-unreachable": "error",
        "no-unneeded-ternary": "error",
        "no-dupe-keys": "error",
        "no-dupe-class-members": "error",
        "key-spacing": [
            1,
            {
                "singleLine": {
                    "beforeColon": false,
                    "afterColon": true
                },
                "multiLine": {
                    "align": "colon"
                }
            }
        ]
    }
}